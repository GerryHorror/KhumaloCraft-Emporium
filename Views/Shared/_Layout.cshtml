<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KhumaloCraft Emporium</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
</head>
<body>
    @{
        var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
    }

    <header class="kc-header">
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background-color: var(--kc-navbar-bg);">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">KhumaloCraft</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Home" && currentAction == "Index" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Home" && currentAction == "About" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Home" && currentAction == "Work" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Work">My Work</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Home" && currentAction == "Contact" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Contact">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Home" && currentAction == "SignUp" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="SignUp">Sign Up</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Home" && currentAction == "Login" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                        </li>
                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Home" && currentAction == "Orders" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Orders">Orders</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(currentController == "Home" && currentAction == "Transactions" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Transactions">Transactions</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="kc-footer">
        <p>&copy; 2024 KhumaloCraft Emporium. All rights reserved.</p>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
