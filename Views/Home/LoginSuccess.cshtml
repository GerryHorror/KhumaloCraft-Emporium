@{
    int userId = Context.Session.GetInt32("UserId") ?? 0;
    string userName = Context.Session.GetString("UserName");
    string userSurname = Context.Session.GetString("UserSurname");
    string userEmail = Context.Session.GetString("UserEmail");
}
<style>
    .success-container {
        background-color: var(--kc-main-bg);
        color: var(--kc-main-text);
        font-family: 'Arial', sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    .success {
        background-color: var(--kc-secondary-bg);
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
        text-align: center;
    }

        .success h2 {
            margin-bottom: 15px;
            font-size: 1.5em;
            font-weight: bold;
            color: var(--kc-main-text);
        }

        .success p {
            font-size: 1.2em;
            color: var(--kc-main-text);
            margin-bottom: 20px;
        }

        .success ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        .success li {
            margin-bottom: 10px;
            font-size: 1em;
            color: var(--kc-main-text);
        }

            .success li span {
                font-weight: bold;
                color: var(--kc-accent-text);
            }
</style>

<div class="success-container">
    <div class="success">
        <h2>Login Successful!</h2>
        <p>Welcome, <span>@userName @userSurname</span>!</p>
        <ul>
            <li>User ID: <span>@userId</span></li>
            <li>Email: <span>@userEmail</span></li>
        </ul>
    </div>
</div>
