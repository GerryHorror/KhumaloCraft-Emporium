@model List<CLDVWebAppST10046280.Models.ProductDisplayModel>
@{
    ViewData["Title"] = "Product Listing";
}
<style>
    .product-title {
        font-size: 2rem;
        margin-top: 3rem;
        color: var(--kc-accent-text);
        text-align: center;
    }

    .product-gallery {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
        margin-top: 2rem;
    }

    .product-item {
        border-radius: 10px;
        padding: 1rem;
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
        background-color: var(--kc-secondary-bg);
    }

    .product-item-name {
        color: var(--kc-accent-text);
        font-weight: bold;
        margin: 1rem 0 0.5rem;
    }

    .product-item p {
        color: var(--kc-main-text);
        margin-bottom: 0.5rem;
    }

    .btn-add-to-cart {
        background-color: var(--kc-button-bg);
        color: var(--kc-button-text);
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1rem;
        transition: background-color 0.3s ease;
    }

        .btn-add-to-cart:hover {
            background-color: var(--kc-highlight-color);
        }

</style>

<body>
    <h1 class="product-title">Product Listing</h1>
    <div class="product-gallery">
        @foreach (var product in Model)
        {
            <div class="product-item">
                <h2 class="product-item-name">@product.ProductName</h2>
                <p>ID: @product.ProductID</p>
                <p>Price: @product.ProductPrice</p>
                <p>Category: @product.ProductCategory</p>
                <p>Availability: @product.Availability</p>

                <!-- Form for adding products to the cart -->
                <form asp-controller="Home" asp-action="AddToCart" method="post">
                    <input type="hidden" name="ProductID" value="@product.ProductID" />
                    <input type="hidden" name="ProductName" value="@product.ProductName" />
                    <input type="hidden" name="ProductPrice" value="@product.ProductPrice" />
                    <input type="hidden" name="ProductCategory" value="@product.ProductCategory" />
                    <input type="hidden" name="Availability" value="@product.Availability" />
                    <button type="submit" class="btn-add-to-cart">Add to Cart</button>
                </form>
            </div>
        }
    </div>
</body>
