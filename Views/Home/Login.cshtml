@model CLDVWebAppST10046280.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}

<style>
    form {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        background-color: var(--kc-secondary-bg);
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    input {
        margin: 10px;
        padding: 10px;
        width: 100%;
        max-width: 300px;
        border: 1px solid var(--kc-secondary-text);
        border-radius: 4px;
        background-color: var(--kc-main-bg);
        color: var(--kc-main-text);
    }

    button {
        margin: 10px;
        padding: 10px;
        width: 100%;
        max-width: 300px;
        background-color: var(--kc-button-bg);
        color: var(--kc-button-text);
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 1.1rem;
        transition: background-color 0.3s ease;
    }

        button:hover {
            background-color: var(--kc-highlight-color);
        }

    .error-message {
        width: 100%;
        max-width: 300px;
        margin: 10px 0;
        padding: 10px;
        color: red;
        text-align: center;
        background-color: var(--kc-secondary-bg);
        border: 1px solid red;
        border-radius: 4px;
    }
</style>
<body>
    <form id="loginForm" asp-controller="Login" asp-action="Login" method="post">
        <p>Login</p>
        <!-- Error message if the details are incorrect/not in the database -->
        @Html.ValidationSummary(true, "", new { @class = "error-message" })
        <input type="text" name="email" placeholder="Email" required>
        <input type="password" name="password" placeholder="Password" required>
        <button type="submit">Login</button>
    </form>
</body>