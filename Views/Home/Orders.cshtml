@model List<CLDVWebAppST10046280.Models.OrderModel>

@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

@if (Model != null && Model.Count > 0)
{
    @foreach (var order in Model)
    {
        <h3>Order ID: @order.OrderID</h3>
        <p>Status: @order.OrderStatus</p>
        <p>Total: @order.OrderTotal.ToString("C")</p>
        
        @if (order.OrderStatus != "Complete")
        {
            <form asp-controller="Order" asp-action="UpdateOrderStatus" method="post" style="display:inline;">
                <input type="hidden" name="orderId" value="@order.OrderID" />
                <select name="status">
                    <option value="Pending" selected="@order.OrderStatus == "Pending")">Pending</option>
                    <option value="Complete" selected="@order.OrderStatus == "Complete")">Complete</option>
                </select>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        }

        <table class="table">
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in order.Items)
                {
                    <tr>
                        <td>@item.ProductID</td>
                        <td>@item.ProductName</td>
                        <td>@item.TransactionQuantity</td>
                        <td>@item.ProductPrice.ToString("C")</td>
                        <td>
                            @if (order.OrderStatus != "Complete")
                            {
                                <form asp-controller="Order" asp-action="RemoveItemFromOrder" method="post" style="display:inline;">
                                    <input type="hidden" name="orderId" value="@order.OrderID" />
                                    <input type="hidden" name="productId" value="@item.ProductID" />
                                    <button type="submit" class="btn btn-danger">Remove</button>
                                </form>
                            }
                            else
                            {
                                <span>Completed</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
            <style>
                table {
                    margin-bottom: 8rem;
                }
            </style>
        </table>
    }
}
else
{
    <p>No orders found.</p>
}
